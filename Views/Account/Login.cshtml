@model UserLoginViewModel

<h2>Login</h2>
<form method="post">
    <div class="mb-3">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<p>Don't have an account? <a asp-action="Register">Register here</a></p>
